# Database Configuration (Supabase PostgreSQL)
# Get these from your Supabase project: Settings -> Database -> Connection String

# Connection pooling URL (for serverless/Vercel) - Use Transaction mode with pgbouncer
DATABASE_URL="postgresql://postgres:password@db.projectid.supabase.co:6543/postgres?pgbouncer=true&connection_limit=1"

# Direct connection URL (for migrations) - Session mode, port 5432
DIRECT_URL="postgresql://postgres:password@db.projectid.supabase.co:5432/postgres"
# JWT Secret for authentication (generate a secure random string)
JWT_SECRET="your-secret-key-change-in-production-min-32-chars-long"

# Admin Credentials (hardcoded, not in database)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="admin123"

# Analytics & Tracking
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_FB_PIXEL_ID=""
NEXT_PUBLIC_GTM_ID=""
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=""

# Site Configuration
NEXT_PUBLIC_SITE_URL=""

# Node Environment
NODE_ENV="development"

